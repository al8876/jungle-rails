<% order.line_items.each do |item| %>
  <tr>
    <td>
      <%= item.product.name %>
      <%= image_tag item.product.image.thumb, alt: item.product.name %>
    </td>
    <td>
      <p><%= item.product.description %></p>
    </td>
    <td>
      $<%= item.item_price %>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      $<%= item.total_price %>
    </td>
  </tr>
<% end %>